@model CProject.Models.CountAliceViewModel

@{
    ViewBag.Title = "CountAlice";
}

<h2>Count Alice</h2>

<form action="@Url.Action("CountAlice", "Exercises")" method="post">
    <textarea name="text" autofocus style="height:100px;width:400px">
        @if (Model != null)
        { @Model.text}
    </textarea><br />
    <br />
    <label>Count Equals: </label><input type="number" style="height:25px;width:50px"  value="@if(@Model != null) { @Model.appearances}" disabled /><br />
    <br />
    <button type="submit">CountAlice</button>
</form>
